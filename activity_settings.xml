<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bildirim Ayarları"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hangi konularda bildirim almak istediğinizi seçin:"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchFault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arıza Bildirimleri"
                android:checked="true"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchComplaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Şikayet Bildirimleri"
                android:checked="true"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Güvenlik Bildirimleri"
                android:checked="true"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchCleaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temizlik Bildirimleri"
                android:checked="true"/>
                
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchSuggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Öneri Bildirimleri"
                android:checked="true"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchLostFound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kayıp Eşya Bildirimleri"
                android:checked="true"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Geri Dön"
        android:layout_marginTop="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"/>

</LinearLayout>